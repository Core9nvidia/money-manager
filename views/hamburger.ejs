<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  
    <style>
        body{
            margin:0px;
            padding:0px;
            margin-top:-15px;
        }
        nav{
            min-height:65px;
            vertical-align: middle;
            height:fit-content;
        }
        ul{
            list-style: none;
        }
        #logo{
            height: 60px;
            width: 60px;
            float:left;
            margin-right:4px;
        }
        .nav-li-inline{
            display: inline-block;
            text-align: center;
        }
        .left{
            float:left;
        }
        .right{
            float:right;
        }
        #logoName{
            font-size: 2.5em;
            margin-left: 4px;
            color:rgb(33,92,157);
        }
        #btn1{
            margin-right: 5%;
        }
        .button{
            height:35px;
            min-width: 80px;
            margin:10px;
            vertical-align: middle;
            width:fit-content;
            font-weight: bolder;
            border:0px;
            background-color: white;
        }
        a:link{
            text-decoration: none;
        }
        .container{
            margin-left:10%;
            margin-right:10%;
        }
        hr.line{
            border-top:1px solid rgb(114, 111, 111);
        }
        .dashboard{
            font-size: larger;
            height: 20px;
            margin-bottom: 3px;
            font-weight: bold;
        }
        #settleup{
            height: 20px;
            margin-bottom: 3px;
        }
        li.balanceSection{
            width: 31%;
            background-color: rgb(198, 243, 230);
            border-radius: 6px;
            height:60px;
            text-align: center;
        }
        #btn2{
            background-color: white;
            font-weight: bold;
            border-width: 0px;
        }
        #btn1{
            color:rgb(247, 234, 234);
            background-color: rgb(47, 214, 167);
            font-weight: bold;
            border-width: 0px;
            box-shadow:black;
        }
        #icon1,#icon2{
            margin:6px;
            font-weight: bolder;
            font-size:large
        }
        #icon2{
            margin-bottom: -10px;
            padding: 0;
        }
        #name{
            font-size: large;
            font-weight: bold;
        }
        .list-item {  
            padding:10px;  
            list-style:none;  
        }  
        .nav-link{  
            color:inherit;  
            text-decoration:none;  
        } 
        .ham{
            padding:5px;  
            cursor:pointer;  
            display:inline;
        }
        
        /*Properties for Nav-bar*/  
        
        .list-item {  
            padding:2px;  
            margin:3px;
            list-style:none;
            border:1px solid black;  
        }  
        .nav-link{  
            color:inherit;  
            text-decoration:none;  
        }  
        /*Properties for Hamburger*/ 
        *{  
            overflow:hidden;  
        }  
        .nav-sub{  
            position:absolute;  
            right:0px; 
            margin-top:10px; 
            flex-direction:column;  
            /* background-color:rgba(236, 221, 221, 0.75);   */
            border-radius:0px 0px 0px 20px;  
            transition:transform 0.3s ease-in;  
            transform:translate(100%);  
            width:fit-content;
        }  
        .nav-change{  
            transform:translate(0%);  
        }  
        #btn2{
            display: inline-flexbox;
            align-items: baseline;
        }
        #icon1{
            margin-bottom: 0px;
        }
        
    </style>
</head>
<body>
    <nav>
        <ul>
            <li class="left nav-li-inline">
                <a href="/">
                    <div class="logo-image">
                        <img id="logo" src="logo1.png" class="img-fluid">
                    </div>
                </a>
            </li>
            <li class="left nav-li-inline" id="logoName">Money Manager</li>
            <li class="right button nav-li-inline" id="btn2"><i class="fa fa-solid fa-user" id="icon1"></i>
                <span id="name"><%= name %></span>
                <span class="ham">
                    <i class="fa fa-angle-down" id="icon2"></i>
                </span>
                <ul class="nav-sub">  
                    <li class="list-item"><a href="#" class="nav-link">Home</a></li>  
                    <li class="list-item"><a href="#" class="nav-link">Blogs</a></li>  
                    <li class="list-item"><a href="#" class="nav-link">About me</a></li>  
                </ul></li>
            
        </ul>
    </nav>
    <span id="myid" data-data="<%= name %>"></span>

    <div class="container">
        <ul id="dashboard-section">
            <li class="left dashboard">Dashboard</li>
            <li class="right"><a href="/settleup" id="settleup_a"><button id="settleup">Settle Up</button></a></li>
        </ul>
        <br>
        <hr class="line">
        <ul>
            <li class="balanceSection nav-li-inline">
                <span>total balance</span><br>
                <span id="totalBalance">Rs. 0</span>
            </li>
            <li class="balanceSection nav-li-inline">
                <span>you owe</span><br>
                <span id="totalBalance">Rs. 0</span>
            </li>
            <li class="balanceSection nav-li-inline">
                <span>you are owed</span><br>
                <span id="totalBalance">Rs. 0</span>
            </li>
        </ul>
        <br>
        <hr class="line">
    </div>    
    <script>
        console.log("here check : ",document.getElementById('myid').dataset.data);
        // hamburger section
        const hamburger = document.querySelector(".ham");  
        const navsub = document.querySelector(".nav-sub");  
        hamburger.addEventListener('click', () => {  
            hamburger.classList.toggle("change");
            navsub.classList.toggle("nav-change");
        });
    </script>
</body>
</html>